<link href="~/layoutSite/css/login.css" rel="stylesheet" />

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <vc:Summary></vc:Summary>
                <div class="card">
                    <div class="card-header">
                        <center><h4 class="card-title">Senha alterada</h4></center>
                    </div>
                    <form asp-action="ForgotPassword">
                        <p>
                            Sua senha foi alterada <a asp-controller="Account" asp-action="Login">Clique aqui para Login</a>.
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
