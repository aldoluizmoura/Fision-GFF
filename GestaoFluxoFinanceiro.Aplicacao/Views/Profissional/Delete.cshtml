@model GestaoFluxoFinanceiro.Aplicacao.ViewModels.ProfissionalViewModel

@{
    ViewData["Title"] = "Excluir";
}

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <center><h4 class="card-title">Tem certeza que vai excluir @Model.Nome?</h4> <p style="color:red">essa ação é irreversível!</p></center>
                    </div>
                    <vc:Summary></vc:Summary>
                    <div>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Nome)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Nome)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CPF)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CPF)
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Matricula)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Matricula)
                            </dd>

                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Excluir" class="btn btn-danger" /> |
                            <a class="btn btn-info" asp-action="Index">Voltar</a>
                        </form>
                    </div>
                    <partial name="_DetalhesContratoFinanceiroProfissional" />
                    <partial name="_DetalhesEndereco" />
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {


    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}