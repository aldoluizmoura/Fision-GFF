@model GestaoFluxoFinanceiro.Aplicacao.ViewModels.AlunoViewModel

@{
    ViewData["Title"] = "Editar " + Model.Nome;
}
<head>
    <link href="~/Content/css/pikaday.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-datetimepicker.css" rel="stylesheet" />
</head>

<h4>@ViewData["Title"]</h4>
<hr />
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <center><h4 class="card-title">@Model.Nome</h4></center>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Edit">
                                <vc:Summary></vc:Summary>
                                <input type="hidden" asp-for="Id" />
                                <div class="row justify-content-center">
                                    <div class="col-md-4 pr-1">
                                        <div class="form-group">
                                            <label asp-for="Nome" class="control-label"></label>
                                            <input asp-for="Nome" class="form-control" />
                                            <span asp-validation-for="Nome" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 px-1">
                                        <div class="form-group">
                                            <label asp-for="CPF" class="control-label"></label>
                                            <input asp-for="CPF" class="form-control" />
                                            <span asp-validation-for="CPF" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 px-1">
                                        <div class="form-group">
                                            <label asp-for="Matricula" class="control-label"></label>
                                            <input asp-for="Matricula" class="form-control" />
                                            <span asp-validation-for="Matricula" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row justify-content-center">
                                    <div class="col-md-6 pr-1">
                                        <div class="form-group">
                                            <label asp-for="Email" class="control-label"></label>
                                            <input asp-for="Email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 pl-1">
                                        <div class="form-group">
                                            <label asp-for="Telefone" class="control-label"></label>
                                            <input asp-for="Telefone" class="form-control" />
                                            <span asp-validation-for="Telefone" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row justify-content-center">
                                    <div class="col-md-6 pr-1">
                                        <label asp-for="DataNascimento" class="control-label"></label>
                                        <input asp-for="DataNascimento" id="datepicker" type="text" class="form-control">
                                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-3 pr-1">
                                        <div class="form-group">
                                            <label asp-for="TipoSexo"></label>
                                            <div>
                                                <input type="radio" value="1" asp-for="TipoSexo" checked="@(Model.TipoSexo == 1)" /> Feminino
                                                <input type="radio" value="2" asp-for="TipoSexo" checked="@(Model.TipoSexo == 2)" /> Masculino
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 pr-1">
                                        <label asp-for="Ativo" class="control-label"></label>
                                        <input type="checkbox" class="form-check" asp-for="Ativo">
                                        <span asp-validation-for="Ativo" class="text-danger"></span>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group">
                                    <button type="submit" class="btn btn-info btn-fill pull-right">Salvar</button>
                                </div>
                            </form>

                            <div id="ContratoFinanceiroTarget">
                                <partial name="_DetalhesContratoFinanceiroAluno" />
                            </div>

                            <div id="EnderecoTarget">
                                <partial name="_DetalhesEndereco" />
                            </div>
                            <div>
                                <a asp-action="Index" class="btn btn-info">Voltar</a>
                            </div>
                        </div>                        
                    </div>                   
                </div>
            </div>
        </div>
    </div>
</div>
<div id="myModal" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="myModalContent"></div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script src="~/Content/js/plugins/moment.min.js"></script>
    <script src="~/Content/js/plugins/pikaday.js"></script>
    <script src="~/Content/js/plugins/jquery.mask.min.js"></script>

    <script>
        $(document).ready(function () {
            SetModal();
        });
    </script>

    <script type="text/javascript">

        $(document).ready(function () {

            $('#datepicker').mask('00/00/0000');
            $('#datetimepickerFim').mask('00/00/0000');

            var picker = new Pikaday
                ({
                    field: document.getElementById('datepicker'),
                    format: 'DD/MM/YYYY',
                    maxDate: new Date()
                });

            var picker = new Pikaday
                ({
                    field: document.getElementById('datetimepickerFim'),
                    format: 'DD/MM/YYYY',
                    maxDate: new Date()
                });
        });
    </script>
}
