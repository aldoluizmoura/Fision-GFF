@model GestaoFluxoFinanceiro.Aplicacao.ViewModels.Acesso.ResetPasswordViewModel
@{ ViewData["Title"] = "ResetSenha"; }

<link href="~/layoutSite/css/login.css" rel="stylesheet" />

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <vc:Summary></vc:Summary>
                <div class="card">
                    <div class="card-header">
                        <center><h4 class="card-title">Redefinir senha</h4></center>
                    </div>

                    <form asp-action="ResetPassword" class="form-signin">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword" class="control-label"></label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-success" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


