@model GestaoFluxoFinanceiro.Aplicacao.ViewModels.AlunoViewModel

<div style="padding-top: 20px">
    <div>
        <hr />
        <h4>Dados Financeiros</h4>
    </div>

    @if (Model != null)
    {
        <table class="table table-hover">
            <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ContratoFinanceiro.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContratoFinanceiro.Desconto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContratoFinanceiro.Observacao)
                </th>               
                <th></th>
            </tr>
            </thead>

            <tr>
                <td>
                    @Model.ContratoFinanceiro.Valor.ToString("C")
                </td>
                <td>
                    @Html.DisplayFor(model => model.ContratoFinanceiro.Desconto)%
                </td>
                <td>
                    @Html.DisplayFor(model => model.ContratoFinanceiro.Observacao)
                </td>               
                <td>
                    <a supress-by-action="Edit,ObterContratoFinanceiro" asp-action="AtualizarContratoFinanceiro" asp-route-id="@Model.Id" class="btn btn-info" data-modal="">
                        <span title="Editar" class="fa fa-pencil-alt"></span>
                    </a>
                </td>
            </tr>
        </table>
    }

</div>

<script>
    SetModal();
</script>

