@model GestaoFluxoFinanceiro.Aplicacao.ViewModels.AlunoViewModel
@{
    ViewData["Title"] = "Dados de " + Model.Nome;
}
<h4>@ViewData["Title"]</h4>
<hr />
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <center><h4 class="card-title">Detalhes de @Model.Nome</h4></center>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-4 pr-1">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-4 px-1">
                            <div class="form-group">
                                <label asp-for="CPF" class="control-label"></label>
                                <input value="@GestaoFluxoFinanceiro.Aplicacao.Extensions.RazorExtensions.FormataDocumento(Model.CPF)" class="form-control" disabled />

                            </div>
                        </div>
                        <div class="col-md-4 px-1">
                            <div class="form-group">
                                <label asp-for="Matricula" class="control-label"></label>
                                <input asp-for="Matricula" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label asp-for="Telefone" class="control-label"></label>
                                <input value="@GestaoFluxoFinanceiro.Aplicacao.Extensions.RazorExtensions.FormataTelefone(Model.Telefone)" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-4 pr-1">
                            <label asp-for="DataNascimento" class="control-label"></label>
                            <input value="@Model.DataNascimento.ToString("dd/MM/yyyy")" type="text" class="form-control" disabled />

                        </div>
                        <div class="col-md-4 pr-1">
                            <label asp-for="DataSaida" class="control-label"></label>
                            @if (Model.DataSaida == DateTime.Parse("01/01/0001"))
                            {
                                <input value="" class="form-control" disabled>
                            }
                            else
                            {
                                <input value="@Model.DataSaida.ToString("dd/MM/yyyy")" class="form-control" disabled>
                            }
                        </div>
                        <div class="col-md-4 pr-1">
                            <div class="form-group">
                                <label asp-for="TipoSexo"></label>
                                <div>
                                    <input type="radio" value="1" asp-for="TipoSexo" checked="@(Model.TipoSexo == 1)" disabled /> Feminino
                                    <input type="radio" value="2" asp-for="TipoSexo" checked="@(Model.TipoSexo == 2)" disabled /> Masculino
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="ContratoTarget">
                        <partial name="_DetalhesContratoFinanceiroAluno" />
                    </div>
                    <div id="EnderecoTarget">
                        <partial name="_DetalhesEndereco" />
                    </div>
                </div>
                <br />
                <div>
                    <a asp-action="Index" class="btn btn-info">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</div>